<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.francescotonini.univrorari">

    <application
        android:usesCleartextTraffic="true"

        android:name=".UniVROrariApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/app_theme">
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.LessonDetailsActivity" />
        <activity android:name=".views.SelectCourseActivity" />
        <activity android:name=".views.SelectOfficesActivity"
            android:label="@string/activity_select_offices_title"/>
        <activity android:name=".views.RoomsActivity" />
        <activity android:name=".views.RoomDetailsActivity" />
    </application>

</manifest>