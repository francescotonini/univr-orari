<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">
            <com.alamkanak.weekview.WeekView
                android:id="@+id/activity_main_weekview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar"
                android:background="@color/background"
                app:todayHeaderTextColor="@color/accent"
                app:timeColumnTextColor="@color/primary_text"
                app:headerRowTextColor="@color/primary_text"
                app:headerRowPadding="@dimen/spacing_twelve"
                app:headerRowBackgroundColor="@android:color/white"
                app:eventTextColor="@android:color/white"
                app:eventCornerRadius="@dimen/spacing_four"
                app:eventTextSize="@dimen/tertiary_text_size"
                app:hourHeight="@dimen/spacing_fiftysix"
                app:numberOfVisibleDays="3" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/activity_main_rooms_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="16dp"
                android:src="@drawable/rooms"
                app:layout_anchor="@id/activity_main_weekview"
                app:layout_anchorGravity="bottom|right|end"
                app:layout_behavior="it.francescotonini.univrorari.helpers.ScrollAwareFABBehavior"/>
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>