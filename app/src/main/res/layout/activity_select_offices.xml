<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/activity_select_offices_refreshlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_select_offices_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="LinearLayoutManager"/>
            </android.support.v4.widget.SwipeRefreshLayout>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/activity_select_offices_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="16dp"
                android:src="@drawable/activity_select_offices_save"
                app:layout_anchor="@id/activity_select_offices_recycler_view"
                app:layout_anchorGravity="bottom|right|end"
                app:layout_behavior="me.francescotonini.univrorari.helpers.ScrollAwareFABBehavior"/>
        </android.support.design.widget.CoordinatorLayout>

        <!-- Text message when something goes wrong -->
        <TextView
            android:id="@+id/activity_select_offices_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/spacing_extra_large"
            android:textAlignment="center"
            style="@style/primary_text_view"/>
    </RelativeLayout>
</layout>