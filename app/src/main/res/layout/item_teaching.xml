<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/spacing_sixtyfour"
        android:maxHeight="@dimen/spacing_sixtyfour"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_eight"
            android:paddingBottom="@dimen/spacing_eight"
            android:paddingLeft="@dimen/spacing_sixteen"
            android:paddingRight="@dimen/spacing_sixtyfour"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_teaching_teaching_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Teaching"
                android:lines="1"
                style="@style/primary_text_view" />
            <TextView
                android:id="@+id/item_teaching_year_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Year"
                android:lines="1"
                style="@style/secondary_text_view" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/item_teaching_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/spacing_sixteen" />

    </RelativeLayout>
</layout>